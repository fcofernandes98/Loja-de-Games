                    <a href="#"><i class="fab fa-discord"></i></a>
                </div>
                <p style="margin-top: 15px;">fatalitygameshop@gmail.com</p>
            </div>
        </div>
        
        <div class="copyright">
            &copy; 2025 FATALITY SHOP. Todos os direitos reservados. | Desenvolvido por Eduardo
        </div>
    </footer>

    <script>
        // FAQ Toggle Function
        function toggleAnswer(question) {
            const answer = question.nextElementSibling;
            const icon = question.querySelector('i');
            
            answer.classList.toggle('show');
            
            if (answer.classList.contains('show')) {
                icon.classList.remove('fa-chevron-down');
                icon.classList.add('fa-chevron-up');
            } else {
                icon.classList.remove('fa-chevron-up');
                icon.classList.add('fa-chevron-down');
            }
        }
        
        // Form Submission
        document.getElementById('support-form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Simulate form submission
            alert('Mensagem enviada com sucesso! Entraremos em contato em breve.');
            this.reset();
        });
        
        // filepath: c:\Users\eduma\OneDrive - Universidade Federal do Ceará\Área de Trabalho\estudos ;)\cursos\fullstack\oficina 3 edu\indexsuporte.html

        // Submenu desaparece após 5 segundos ao sair com o mouse
        let submenuTimeout;

        document.querySelectorAll('nav ul li').forEach(function(li) {
            const submenu = li.querySelector('.submenu');
            if (submenu) {
                li.addEventListener('mouseenter', function() {
                    clearTimeout(submenuTimeout);
                    submenu.style.display = 'block';
                });
                li.addEventListener('mouseleave', function() {
                    submenuTimeout = setTimeout(function() {
                        submenu.style.display = 'none';
                    }, 3000); // 3 segundos
                });
                submenu.addEventListener('mouseenter', function() {
                    clearTimeout(submenuTimeout);
                    submenu.style.display = 'block';
                });
                submenu.addEventListener('mouseleave', function() {
                    submenuTimeout = setTimeout(function() {
                        submenu.style.display = 'none';
                    }, 5000);
                });
            }
        });
    </script>
</body>
